!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MAC0218 Project
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if flash[:notice]
      .notification.is-success.global-notification
        %p.notice= notice
    - if flash[:alert]
      .notification.is-danger.global-notification
        %p.alert= alert
    %nav.navbar.is-light{"aria-label" => "main navigation", :role => "navigation"}
      .navbar-brand
        = link_to root_path, class:"navbar-item" do
          %h1.title.is-5 Posts
        .navbar-burger.burger{"data-target" => "navbar"}
          %span
          %span
          %span
      #navbar.navbar-menu
        .navbar-end
          - if user_signed_in?
            .navbar-item
              .field.is-grouped
                = link_to 'New Post', new_post_path, class:"button is-info"
            .navbar-item.has-dropdown.is-hoverable
              = link_to 'Account', edit_user_registration_path, class: "navbar-link"
              .navbar-dropdown.is-right
                = link_to current_user.username, edit_user_registration_path, class:"navbar-item"
                = link_to "Log Out", destroy_user_session_path, method: :delete, class:"navbar-item"
          - else
            .navbar-item
              .field.is-grouped
                %p.control
                  = link_to 'New Post', new_post_path, class:"button is-info"
                %p.control
                  = link_to "Sign In", new_user_session_path, class: "button is-light"
                %p.control
                  = link_to "Sign up", new_user_registration_path, class: "button is-light"
    %section.section
      .container
        = yield
