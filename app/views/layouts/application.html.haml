!!!
%html
  %head
    %title MAC0218 Project
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if flash[:notice]
      .notification.is-success.global-notification
        %p.notice= notice
    - if flash[:alert]
      .notification.is-danger.global-notification
        %p.alert= alert
    %nav.navbar.is-light{"aria-label" => "main navigation", :role => "navigation"}
      .navbar-brand
        = link_to root_path, class:"navbar-item" do
          %h1.title.is-5 Home
        = link_to subjects_path, class:"navbar-item" do
          %h1.title.is-5 Tópicos
        = link_to posts_path, class:"navbar-item" do
          %h1.title.is-5 Últimas postagens
        .navbar-burger.burger{"data-target" => "navbar"}
          %span
          %span
          %span
      #navbar.navbar-menu
        .navbar-end
          .navbar-item
            .field.is-grouped
              = form_tag(search_path) do
                = text_field_tag :keywords, params[:keywords], class: "input control", placeholder: "Pesquise por postagens..."
          - if user_signed_in?
            .navbar-item
              .field.is-grouped
                = link_to 'Novo Post', new_post_path, class:"button is-info"
            .navbar-item.has-dropdown.is-hoverable
              - @user = current_user
              = link_to 'Minha Conta', profile_path(@user.to_param), class: "navbar-link"
              .navbar-dropdown.is-right
                = link_to @user.username, profile_path(@user.to_param), class:"navbar-item"
                = link_to "Configurações", edit_user_registration_path, class:"navbar-item"
                = link_to "Sair", destroy_user_session_path, method: :delete, class:"navbar-item"
          - else
            .navbar-item
              .field.is-grouped
                %p.control
                  = link_to 'Novo Post', new_post_path, class:"button is-info"
                %p.control
                  = link_to "Acessar", new_user_session_path, class: "button is-light"
                %p.control
                  = link_to "Inscreva-se", new_user_registration_path, class: "button is-light"
    %section.section
      .container
        = yield
